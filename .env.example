# ============================================
# MoriAI 환경 변수 설정 예제
# ============================================
# 이 파일을 .env로 복사하고 실제 값으로 채워주세요:
# cp .env.example .env

# ============================================
# 서버 설정
# ============================================
STORYBOOK_API_PORT=8001
TTS_API_PORT=8000
DEBUG=false
UVICORN_RELOAD=false

# ============================================
# 데이터 디렉토리 설정
# ============================================
BOOK_DATA_DIR=./data/book
IMAGE_DATA_DIR=./data/image
VIDEO_DATA_DIR=./data/video

# ============================================
# 외부 API 키 설정
# ============================================

# Google Gemini API 키 (이미지 생성용)
# https://aistudio.google.com/app/apikey 에서 발급
GOOGLE_API_KEY=your_google_api_key_here

# ElevenLabs API 키 (TTS 생성용)
# https://elevenlabs.io/app/settings/api-keys 에서 발급
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ============================================
# Kling API 설정 (비디오 생성용)
# ============================================
# 여러 키를 사용하는 경우 JSON 배열 형태로 설정
# 예: ["key1", "key2", "key3"]
# 단일 키인 경우: ["your_key_here"]
KLING_ACCESS_KEY=["your_kling_access_key_here"]
KLING_SECRET_KEY=["your_kling_secret_key_here"]
KLING_API_URL=https://api-singapore.klingai.com
KLING_MODEL_NAME=kling-v2-1
KLING_VIDEO_MODE=std
KLING_VIDEO_DURATION=5
KLING_KEY_COOLDOWN_SECONDS=300
KLING_POLLING_INTERVAL=10
KLING_MAX_CONCURRENT=3
KLING_MAX_POLLING_TIME=600

# ============================================
# TTS 설정
# ============================================
TTS_DEFAULT_VOICE_ID=TxWD6rImY3v4izkm2VL0
TTS_DEFAULT_MODEL_ID=eleven_v3
TTS_DEFAULT_LANGUAGE=en
TTS_OUTPUT_DIR=/app/data/sound
TTS_MAX_CONCURRENT_REQUESTS=5
TTS_API_URL=http://tts-api:8000

# ============================================
# 보이스 클론 설정
# ============================================
CLONE_MIN_DURATION=150
CLONE_MAX_DURATION=180
CLONE_TARGET_DURATION=165

# ============================================
# CORS 설정
# ============================================
# 여러 origin을 사용하는 경우 쉼표로 구분
# 예: http://localhost:5173,http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:5173

# ============================================
# 템플릿 모드 설정 (테스트용)
# ============================================
USE_TEMPLATE_MODE=false
